<link rel="stylesheet" href="{{plugin_path('Novalnet')}}/css/novalnet_ui.css"> 
<script defer src="{{plugin_path('Novalnet')}}/js/novalnet_invoice.js"></script>

<form method="post" id="nn_invoice_form" name="nn_invoice_form" action="{{nnPaymentProcessUrl}}">
	<div class="modal-header"> 
		<button type="button" aria-label="Close" data-dismiss="modal" class="close" onClick="window.location.reload();">
			<span aria-hidden="true">x</span>
		</button> 
		<h4 class="modal-title">{{paymentName}} </h4>
	</div>
	
	<div class="modal-body">
		<div class="modal-title" style="color:#008EBF;"><b>{{trans("Novalnet::PaymentMethod.note")}}</b> {{ trans("Novalnet::PaymentMethod.dobshowingreason") }}</div><br>
		<fieldset>		
				<input type="hidden" id="paymentKey" name="paymentKey" value="{{paymentMopKey}}" />
				<input type="hidden" id="nn_invoice_guarantee_force" name="nn_invoice_guarantee_force" value="{{guarantee_force}}">
				<input type="hidden" name="nn_invoice_valid_dob_msg" id="nn_invoice_valid_dob_msg" value="{{trans("Novalnet::PaymentMethod.doberror")}}">
				<div class="form-control" style="color:#495057;border:0;font-weight:bold;">
				<label for="nn_invoice_birthday">{{trans("Novalnet::PaymentMethod.birthdate_label")}}*</label>
				</div>
				<div class="row">
	<div class="col-sm-4">
		<input type="text" name="nn_invoice_date" id="nn_invoice_date" maxlength="2" placeholder="Day" class="form-control" autocomplete="off">
	</div>
	 
	<div class="col-sm-4">
	   <select id="nn_invoice_month" type="text" name="nn_invoice_month" placeholder="Month" class="form-control">
	   <option value="0" selected>Select a Month</option>
	    {% for i in 1..12 %}
    		<option value="{{i}}">{{ trans("Novalnet::PaymentMethod.month#{i}") }}</option>
	    {% endfor %}
           
	   </select>
         </div>
  	
	<div class="col-sm-4 autocomplete">
		<input type="text" name="nn_invoice_year" id="nn_invoice_year" maxlength="4" placeholder="Year" class="form-control" autocomplete="off">
	</div>
				
				</div> 
					
		</fieldset>
	</div>
	<div class="modal-footer">
		<button type="submit" class="btn btn-primary" id="novalnet_form_btn" onclick="">
			<i class="fa fa-check" aria-hidden="true"> </i>
			{{ trans("Novalnet::PaymentMethod.submit_button_text") }}
		</button>
	</div>
</form>

